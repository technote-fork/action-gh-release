{
  "name": "@technote-space/action-gh-release",
  "version": "2.5.2",
  "private": true,
  "description": "GitHub Action for creating GitHub Releases",
  "keywords": [
    "actions"
  ],
  "homepage": "https://github.com/technote-space/action-gh-release",
  "bugs": {
    "url": "https://github.com/technote-space/action-gh-release/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/action-gh-release.git"
  },
  "license": "MIT",
  "author": "softprops",
  "contributors": [
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "url": "https://technote.space"
    }
  ],
  "files": [
    "lib",
    "action.yml"
  ],
  "scripts": {
    "build": "rm -rdf lib && rollup -c",
    "cover": "vitest run --coverage",
    "lint": "eslint 'src/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "release": "yarn release-ga --test",
    "test": "yarn lint && yarn typecheck && yarn cover",
    "typecheck": "tsc --noEmit",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "devDependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@octokit/plugin-paginate-rest": "^6.1.2",
    "@octokit/plugin-rest-endpoint-methods": "^7.1.2",
    "@octokit/types": "^9.2.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@technote-space/filter-github-action": "^0.6.12",
    "@technote-space/github-action-helper": "^5.3.13",
    "@technote-space/github-action-log-helper": "^0.2.17",
    "@technote-space/github-action-test-helper": "^0.11.13",
    "@technote-space/release-github-actions-cli": "^1.9.5",
