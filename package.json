    "@types/node": "^20.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitest/coverage-c8": "^0.31.1",
    "assert": "^2.0.0",
    "eslint": "^8.41.0",
    "eslint-plugin-import": "^2.27.5",
    "glob": "^10.2.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mime": "^3.0.0",
    "nock": "^13.3.1",
    "rollup": "^3.22.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  }
